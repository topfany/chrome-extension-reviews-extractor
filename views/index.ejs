<script>
    $(document).ready(function() {
        $('#extensionForm').on('submit', function(e) {
            e.preventDefault(); // 阻止表单默认提交行为

            // 获取用户输入的URL
            var extensionUrl = $('#extensionUrl').val();

            // 使用location.origin获取当前页面的起源（协议+域名+端口）
            var apiBaseUrl = location.origin;
            // 拼接API端点路径
            var apiUrl = apiBaseUrl + '/api/data';
            $.ajax({
                url: apiUrl,
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ url: extensionUrl }),
                success: function(data) {
                    // 显示返回的数据在文本区域
                    $('#responseArea').text(JSON.stringify(data, null, 2));
                },
                error: function(jqXHR, textStatus, errorThrown) {
                    $('#responseArea').text('Error: ' + textStatus + ' ' + errorThrown);
                }
            });
        });
    });
</script>

<script>
    // 表单验证
    (() => {
        'use strict';
        window.addEventListener('load', function() {
            // 获取所有表单
            const forms = document.getElementsByClassName('needs-validation');
            // 阻止表单提交
            const validation = Array.prototype.filter.call(forms, form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>

